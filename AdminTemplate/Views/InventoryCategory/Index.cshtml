@model IEnumerable<AdminTemplate.Models.InventoryCategory>

<main id="main-content">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2>Inventory Categories</h2>
                            <a href="/InventoryCategory/Create" class="btn btn-primary">+ Add Category</a>
                        </div>

                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Category Name</th>
                                    <th style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>
                                                <a href="/InventoryCategory/Edit/@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                                <a href="/InventoryCategory/Details/@item.Id" class="btn btn-sm btn-info">Details</a>
                                                <a href="/InventoryCategory/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="3" class="text-center">No categories found.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>