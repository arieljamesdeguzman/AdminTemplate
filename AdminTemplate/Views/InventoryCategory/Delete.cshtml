@model AdminTemplate.Models.InventoryCategory
@{
    ViewData["Title"] = "Delete Category";
}
<main id="main-content">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2>Delete Category</h2>
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">
                                <i class="mdi mdi-alert"></i> Confirm Deletion
                            </h4>
                            <p>Are you sure you want to delete this category? This action cannot be undone.</p>
                        </div>
                        <div class="card mt-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 text-center">
                                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                        {
                                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid border rounded mb-3" style="max-width: 200px; height: auto;" />
                                        }
                                        else
                                        {
                                            <div style="width: 200px; height: 200px; background-color: #e9ecef; display: flex; align-items: center; justify-content: center; border-radius: 4px; margin: 0 auto;">
                                                <i class="mdi mdi-image" style="font-size: 48px; color: #6c757d;"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-8">
                                        <h4 class="mb-3">@Model.Name</h4>
                                        <p><strong>ID:</strong> @Model.Id</p>
                                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                        {
                                            <p class="text-muted"><small><i class="mdi mdi-alert-circle"></i> The associated image file will also be permanently deleted.</small></p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <form asp-action="Delete" method="post" class="mt-4">
                            <input type="hidden" asp-for="Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="mdi mdi-delete"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="mdi mdi-close"></i> Cancel
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>