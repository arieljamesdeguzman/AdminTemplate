@model AdminTemplate.DTOs.InventoryCategoryDto

<main id="main-content">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                    <h2>Add Inventory Category</h2>
                    <hr />

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="/InventoryCategory" class="btn btn-secondary">Cancel</a>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>