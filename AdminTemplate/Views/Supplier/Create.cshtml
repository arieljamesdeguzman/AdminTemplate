@model AdminTemplate.DTOs.SupplierDto

<main id="main-content">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                    <h2>Add Supplier</h2>
                    <form asp-action="Create" method="post">
                        <div class="mb-3"><label>Name</label><input asp-for="SupplierName" class="form-control" /></div>
                        <div class="mb-3"><label>Contact</label><input asp-for="ContactNumber" class="form-control" /></div>
                        <div class="mb-3"><label>Email</label><input asp-for="Email" class="form-control" /></div>
                        <div class="mb-3"><label>Address</label><textarea asp-for="Address" class="form-control"></textarea></div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="/Supplier" class="btn btn-secondary">Cancel</a>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>