@model AdminTemplate.Models.Supplier

<main id="main-content">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                    <h2>Supplier Details</h2>
                    <p><strong>Name:</strong> @Model.SupplierName</p>
                    <p><strong>Contact:</strong> @Model.ContactNumber</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Address:</strong> @Model.Address</p>

                    <a href="/Supplier/Edit/@Model.Id" class="btn btn-warning">Edit</a>
                    <a href="/Supplier" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>