@model AdminTemplate.Models.Inventory
@{
    ViewData["Title"] = "Details Inventory";
}
<main id="main-content">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2>Inventory Item Details</h2>

                        <div class="card p-3">
                            <h4>@Model.ItemName</h4>
                            <p><strong>Category:</strong> @Model.Category?.Name</p>
                            <p><strong>Supplier:</strong> @Model.Supplier?.SupplierName</p>
                            <p><strong>Quantity:</strong> @Model.CurrentQuantity @Model.Unit</p>
                            <p><strong>Cost Per Unit:</strong> @Model.CostPerUnit.ToString("C")</p>
                            <p><strong>Selling Price:</strong> @Model.SellingPrice?.ToString("C")</p>
                            <p><strong>Location:</strong> @Model.Location</p>
                            <p><strong>Expiry Date:</strong> @Model.ExpiryDate?.ToShortDateString()</p>
                            <p><strong>Status:</strong> @Model.Status</p>
                            <p><strong>Date Added:</strong> @Model.DateAdded.ToShortDateString()</p>
                            <p><strong>Last Updated:</strong> @Model.LastUpdated.ToShortDateString()</p>
                        </div>

                        <a href="/Inventory/Edit/@Model.Id" class="btn btn-warning mt-3">Edit</a>
                        <a href="/Inventory" class="btn btn-secondary mt-3">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>