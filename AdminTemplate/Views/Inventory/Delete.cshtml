@model AdminTemplate.Models.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<main id="main-content">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2>Delete Inventory Item</h2>

                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">
                                <i class="mdi mdi-alert"></i> Confirm Deletion
                            </h4>
                            <p>Are you sure you want to delete this inventory item? This action cannot be undone.</p>
                        </div>

                        <div class="card mt-3">
                            <div class="card-body">
                                <h4 class="mb-3">@Model.ItemName</h4>

                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Category:</strong> @Model.Category?.Name</p>
                                        <p><strong>Supplier:</strong> @(Model.Supplier?.SupplierName ?? "N/A")</p>
                                        <p><strong>Unit:</strong> @Model.Unit</p>
                                        <p><strong>Current Quantity:</strong> @Model.CurrentQuantity</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Cost Per Unit:</strong> @Model.CostPerUnit.ToString("C")</p>
                                        <p><strong>Selling Price:</strong> @(Model.SellingPrice?.ToString("C") ?? "N/A")</p>
                                        <p><strong>Location:</strong> @(Model.Location ?? "N/A")</p>
                                        <p><strong>Status:</strong> <span class="badge badge-info">@Model.Status</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Delete" method="post" class="mt-4">
                            <input type="hidden" asp-for="Id" />
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-danger">
                                <i class="mdi mdi-delete"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="mdi mdi-close"></i> Cancel
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>