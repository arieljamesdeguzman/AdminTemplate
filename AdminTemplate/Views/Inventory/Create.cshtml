@model AdminTemplate.ViewModels.InventoryViewModel
@{
    ViewData["Title"] = "Create Inventory";
}

<main id="main-content">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2>Add New Inventory Item</h2>
                        <form asp-action="Create" method="post">
                            <div class="mb-3">
                                <label>Item Name</label>
                                <input asp-for="Inventory.ItemName" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Category</label>
                                <select asp-for="Inventory.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                                    <option value="">-- Select Category --</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label>Supplier</label>
                                <select asp-for="Inventory.SupplierId" class="form-control" asp-items="@(new SelectList(Model.Suppliers, "Id", "SupplierName"))">
                                    <option value="">-- Select Supplier --</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label>Unit</label>
                                <input asp-for="Inventory.Unit" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Current Quantity</label>
                                <input asp-for="Inventory.CurrentQuantity" type="number" step="0.01" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Reorder Level</label>
                                <input asp-for="Inventory.ReorderLevel" type="number" step="0.01" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Cost per Unit</label>
                                <input asp-for="Inventory.CostPerUnit" type="number" step="0.01" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Selling Price</label>
                                <input asp-for="Inventory.SellingPrice" type="number" step="0.01" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Location</label>
                                <input asp-for="Inventory.Location" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Expiry Date</label>
                                <input asp-for="Inventory.ExpiryDate" type="date" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Status</label>
                                <select asp-for="Inventory.Status" class="form-control">
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                    <option value="expired">Expired</option>
                                    <option value="out_of_stock">Out of Stock</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="/Inventory" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>