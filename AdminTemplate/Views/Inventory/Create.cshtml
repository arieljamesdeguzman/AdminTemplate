@model AdminTemplate.ViewModels.InventoryViewModel

@{
    ViewData["Title"] = "Create Inventory";
}

<main id="main-content">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2>Add New Inventory Item</h2>

                        @* Display validation messages *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <form asp-action="Create" method="post">
                            <div class="mb-3">
                                <label asp-for="Inventory.ItemName" class="form-label"></label>
                                <input asp-for="Inventory.ItemName" class="form-control" />
                                <span asp-validation-for="Inventory.ItemName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.CategoryId" class="form-label"></label>
                                <select asp-for="Inventory.CategoryId"
                                        class="form-control text-white"
                                        asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                                    <option value="" class="text-white">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="Inventory.CategoryId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.SupplierId" class="form-label"></label>
                                <select asp-for="Inventory.SupplierId"
                                        class="form-control text-white"
                                        asp-items="@(new SelectList(Model.Suppliers, "Id", "SupplierName"))">
                                    <option value="" class="text-white">-- Select Supplier --</option>
                                </select>
                                <span asp-validation-for="Inventory.SupplierId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.Unit" class="form-label"></label>
                                <input asp-for="Inventory.Unit" class="form-control" />
                                <span asp-validation-for="Inventory.Unit" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.CurrentQuantity" class="form-label"></label>
                                <input asp-for="Inventory.CurrentQuantity" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Inventory.CurrentQuantity" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.ReorderLevel" class="form-label"></label>
                                <input asp-for="Inventory.ReorderLevel" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Inventory.ReorderLevel" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.CostPerUnit" class="form-label"></label>
                                <input asp-for="Inventory.CostPerUnit" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Inventory.CostPerUnit" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.SellingPrice" class="form-label"></label>
                                <input asp-for="Inventory.SellingPrice" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Inventory.SellingPrice" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.Location" class="form-label"></label>
                                <input asp-for="Inventory.Location" class="form-control" />
                                <span asp-validation-for="Inventory.Location" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.ExpiryDate" class="form-label"></label>
                                <input asp-for="Inventory.ExpiryDate" type="date" class="form-control" />
                                <span asp-validation-for="Inventory.ExpiryDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Inventory.Status" class="form-label"></label>
                                <select asp-for="Inventory.Status" class="form-control">
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                    <option value="expired">Expired</option>
                                    <option value="out_of_stock">Out of Stock</option>
                                </select>
                                <span asp-validation-for="Inventory.Status" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}