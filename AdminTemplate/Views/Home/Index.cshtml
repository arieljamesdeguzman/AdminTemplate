        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary-dark: #0f0f0f;
        --secondary-dark: #1a1a1a;
        --accent-gold: #d4af37;
        --accent-light: #f5f5f5;
        --text-light: #e0e0e0;
    }

    body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--primary-dark);
        color: var(--text-light);
        overflow-x: hidden;
    }

    html {
        scroll-behavior: smooth;
    }

    /* Navigation */
